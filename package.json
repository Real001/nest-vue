{
  "private": true,
  "workspaces": {
    "packages": [
      "packages",
      "client",
      "server"
    ],
    "nohoist": [
      "**/vuetify",
      "**/material-design-icons-iconfont",
      "**/devicon"
    ]
  },
  "scripts": {
    "client-serve": "cd client && yarn serve",
    "client-build": "cd client && yarn build",
    "client-package": "cd client && yarn package",
    "server-serve": "cd server && yarn start:dev",
    "server-build": "cd server && yarn build",
    "server-package": "cd server && yarn package",
    "server-prod": "cd server && yarn start:prod",
    "server-start": "cd server && yarn start:prod",
    "gc": "git clean -dxfe .idea/"
  },
  "resolutions": {
    "terser": "3.14.1"
  }
}
